<section x-data="SecretSanta.createOrUpdateUser()" x-init="loadData()">
    @await Html.PartialAsync("_CreateOrEdit")
    <label class="text-gray-500 font-bold text-right">Gifts</label>
    <template x-for="(currentGift, index) in gifts" :key="index">
        <section class="w-full sm:w-1/3">
            <section class="border-gray-500 hover:shadow-xl border-2 p-6 m-5 rounded-xl flex flex-row justify-between">
                <div class="inline-block"><span x-text="currentGift.title"></span></div>
                <button class="-mt-6" @@click.prevent="deleteGift(currentGift)"><i class="fas fa-trash text-gray-700 hover:text-red-700"></i></button>
            </section>
        </section>
    </template>
    <div class="mb-6">
        <div class="grid grid-cols-1 gap-4">
            <div>
                <label class="text-gray-500 font-bold text-right" for="Title">Title</label>
                <input class="w-full border-b-2 border-green-300 focus:border-green-600 focus:ring-transparent focus:outline-none" type="text" 
                  id="Title" name="Title" x-model="gift.title"/>
            </div>
            <div>
                <label class="text-gray-500 font-bold text-right" for="Description">Description</label>
                <input class="w-full border-b-2 border-green-300 focus:border-green-600 focus:ring-transparent focus:outline-none" type="text" 
                  id="Description" name="Description" x-model="gift.description"/>
            </div>
            <div>
                <label class="text-gray-500 font-bold text-right" for="Url">URL</label>
                <input class="w-full border-b-2 border-green-300 focus:border-green-600 focus:ring-transparent focus:outline-none" type="text" 
                  id="Url" name="Url" x-model="gift.url"/>
            </div>
            <div>
                <label class="text-gray-500 font-bold text-right" for="Priority">Priority</label>
                <input class="w-full border-b-2 border-green-300 focus:border-green-600 focus:ring-transparent focus:outline-none" type="number" 
                  id="Priority" name="Priority" x-model="gift.priority"/>
            </div>
        </div>
    </div>
    <button class="border-2 bg-green-400 border-green-800 hover:bg-green-600 py-2 px-4 rounded-xl mr-3" @@click="addGift()">Add Gift</button>
    <button class="border-2 bg-green-400 border-green-800 hover:bg-green-600 py-2 px-4 rounded-xl mr-3" @@click="update()">Update</button>
    <a class="inline-block border-2 bg-white border-green-400 hover:border-green-600 py-2 px-4 rounded-xl" asp-controller="Users" asp-action="Index">Cancel</a>
</section>
