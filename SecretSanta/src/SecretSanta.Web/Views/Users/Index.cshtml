@{
   ViewBag.Title = "Users";
}

@model List<UserViewModel>

@{int counter = 0;}

<div class="grid grid-cols-1 sm:grid-cols-3">
@foreach(var userViewModel in Model) {
  <a class="grid-item" asp-controller="Users" asp-action="Edit" asp-route-id=@counter>
    @userViewModel.FirstName @userViewModel.LastName
    <form asp-controller="Users" asp-action="Delete" asp-route-id=@counter method="post">
      <button class="btn-red" onclick="return confirm('Delete @userViewModel.FirstName @userViewModel.LastName?')">X</button>
    </form>
  </a>
  counter++;
}
</div>
<br>
<div class="px-4">
  <a class="btn" asp-action="Create">Create</a>
</div>
