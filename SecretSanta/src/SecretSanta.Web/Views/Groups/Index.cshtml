@{
   ViewBag.Title = "Groups";
}

@model List<GroupViewModel>

@{int counter = 0;}

<div class="grid grid-cols-1 sm:grid-cols-3">
@foreach(var groupViewModel in Model) {
  <a class="grid-item" asp-controller="Groups" asp-action="Edit" asp-route-id=@counter>
    @groupViewModel.Name
    <form asp-controller="Groups" asp-action="Delete" asp-route-id=@counter method="post">
      <button class="btn-red" onclick="return confirm('Delete @groupViewModel.Name?')">X</button>
    </form>
  </a>
  counter++;
}
</div>
<br>
<div class="px-4">
  <a class="btn" asp-action="Create">Create</a>
</div>
